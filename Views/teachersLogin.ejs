<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher's Login</title>
</head>
<body>
    
    <!-- partials  -->
    <%- include('./Partials/header.ejs')  %> 

    <form action="userlogin" id="loginForm" method="post">
        <section class="vh-100 bg-dark" >
            <div class="container h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-5 col-lg-6 col-xl-5">
                  <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
          
                      <h3 class="mb-5">Sign in</h3>
                      <p id="error" class="text-danger"> <%= errorMesssage %>  </p> 
                      <div class="form-outline mb-4">
                        <input type="text" id="teacherID" class="form-control form-control-lg" placeholder="Teacher ID" name="teacherID" required onclick="changeFunc()"/>
                      </div>
          
                      <div class="form-outline mb-4">
                        <input type="password" id="passwd" class="form-control form-control-lg" placeholder="Password" name="passwd" required onclick="changeFunc()"/>
                      </div>
          
                      <button class="btn btn-primary btn-lg btn-block" type="submit" >Login</button>
                      <hr class="my-4">
                      <div>
                        <p class="mb-0">Don't have an account? <a href="newuser" class="text-black-50 fw-bold">Sign Up</a></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    </form>
    
</body>

<script>
  function changeFunc(){
      document.getElementById('error').style.display = 'none';
  }

</script>
</html>